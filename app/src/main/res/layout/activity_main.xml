<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp">

    <View
        android:id="@+id/color_box"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:background="#FF0000"/>

    <!-- Red Color Controls -->
    <CheckBox
        android:id="@+id/checkbox_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Red"
        app:layout_constraintTop_toBottomOf="@id/color_box"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <SeekBar
        android:id="@+id/seekbar_red"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/checkbox_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:max="255"
        android:progress="255"
        android:enabled="false"/>

    <TextView
        android:id="@+id/textview_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seekbar_red"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:text="Red"
        android:textSize="18sp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/edittext_red"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textview_red"
        app:layout_constraintBottom_toBottomOf="@id/textview_red"
        app:layout_constraintStart_toEndOf="@id/textview_red"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:hint="0-255"
        android:inputType="number"
        android:gravity="center"
        android:textDirection="ltr"
        android:enabled="false"/>

    <!-- Green Color Controls -->
    <CheckBox
        android:id="@+id/checkbox_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Green"
        app:layout_constraintTop_toBottomOf="@id/edittext_red"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <SeekBar
        android:id="@+id/seekbar_green"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/checkbox_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:max="255"
        android:progress="0"
        android:enabled="false"/>

    <TextView
        android:id="@+id/textview_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seekbar_green"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:text="Green"
        android:textSize="18sp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/edittext_green"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textview_green"
        app:layout_constraintBottom_toBottomOf="@id/textview_green"
        app:layout_constraintStart_toEndOf="@id/textview_green"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:hint="0-255"
        android:inputType="number"
        android:gravity="center"
        android:textDirection="ltr"
        android:enabled="false"/>

    <!-- Blue Color Controls -->
    <CheckBox
        android:id="@+id/checkbox_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Blue"
        app:layout_constraintTop_toBottomOf="@id/edittext_green"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <SeekBar
        android:id="@+id/seekbar_blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/checkbox_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:max="255"
        android:progress="0"
        android:enabled="false"/>

    <TextView
        android:id="@+id/textview_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seekbar_blue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:text="Blue"
        android:textSize="18sp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/edittext_blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textview_blue"
        app:layout_constraintBottom_toBottomOf="@id/textview_blue"
        app:layout_constraintStart_toEndOf="@id/textview_blue"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:hint="0-255"
        android:inputType="number"
        android:gravity="center"
        android:textDirection="ltr"
        android:enabled="false"/>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edittext_blue"
        android:text="Reset"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

